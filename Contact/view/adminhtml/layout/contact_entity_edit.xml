    <body>
        <referenceBlock name="page.title">
            <action method="setTitleClass">
                <argument name="class" xsi:type="string">complex</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block name="contact_entity_preview"
                class="Smile\Contact\Block\Adminhtml\Preview"
                template="Smile_Contact::preview/preview.phtml" />
            <uiComponent name="contact_entity_form" />
        </referenceContainer>
    </body>
</page>
